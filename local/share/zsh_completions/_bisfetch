#compdef bisfetch

_bisfetch() {
    local curcontext="$curcontext" state line
    typeset -A opt_args

    _arguments \
        '*: :->folders'

    case "$state" in
        folders)
            _arguments "*:folder:($(fd "." "$HOME/Documents/projects/bison/assessment/LWR/validation" -t d -d 1 -exec basename {}))"
            ;;
    esac
}

_bisfetch "$@"
