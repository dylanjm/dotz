#!/usr/bin/env bash

main() {
  until [[ -e Makefile ]] || [[ "$(pwd)" == '/' ]]; do
    cd ..
  done

  printf "%s\n" "Building in ""$(pwd)""..."
  make -j 16 "${@}"
}

if [[ "${BASH_SOURCE[0]}" = "${0}" ]]; then
  main "${@}"
fi

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
