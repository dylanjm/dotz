# MOOSE Framework sourcing script
#source /usr/local/opt/modules/init/bash
#source /usr/local/opt/modules/init/bash_completion
source /usr/local/opt/modules/init/zsh
export MODULEPATH=$MODULEPATH:/usr/local/Cellar/moose/modules_9

# if moose environment is available, load the module
if [ -d /usr/local/opt/moose ]; then
  module load moose-dev-clang
fi

# check if user applied the additional commands necessary to run peacock
if [ -d /usr/local/opt/moose-peacock ] && [ `pip list 2>/dev/null | grep -c "matplotlib\|scipy\|numpy\|pandas"` -ge 4 ]; then
  export MOOSEPEACOCK=true
  module load peacock
fi

# check if user applied the additional commands necessary to run peacock3
if [ -d /usr/local/opt/moose-peacock3 ] && [ `pip3 list 2>/dev/null | grep -c "matplotlib\|scipy\|numpy\|pandas"` -ge 4 ]; then
  export MOOSEPEACOCK3=true
fi

