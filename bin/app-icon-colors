#!/usr/local/bin/bash

fd . '/Applications/' -e .icns | xargs -I{} convert '{}' -scale 50x50! -depth 8 +dither -colors 8 -format "%c" histogram:info: |
    sed -n 's/^[ ]*\(.*\):.*[#]\([0-9a-fA-F]*\) .*$/\1,#\2/p' |
    sort -r -n -k 1 -t ","

#convert *.jpg +dither -colors 5 -define histogram:unique-colors=true -format "%c" histogram:info: >hex.txt

#sips -s format png AppIcon.icns --out test.png
