#!/usr/bin/env zsh


for i in *.mp4; do
    local artist="CS7637 Knowledge-Based AI"
    local album="Lesson $(echo "${PWD##*/}" | sed -e 's/\(_-_\)/ /g' -e 's/_/ /g' -e 's/and/\&/g' -e 's/ Videos//g')"

    local num="$(echo "$i" | cut -c1 -c2)"
    local name="$( echo "$i" | sed -e 's/[0-9]\{2,2\}_-_//g' -e 's/_/ /g' -e 's/.mp4//g' -e 's/and/\&/g')"
    local trackname="L$(echo "${PWD##*/}" | cut -c1 -c2)E$num $name"

    AtomicParsley "$i" --artist "$artist" --title "$trackname" --album "$album" --genre "Education" --tracknum $num --year 2020 --overWrite
done
