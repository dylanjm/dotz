#!/bin/sh
case "$1" in
    *.awk|*.groff|*.java|*.js|*.m4|*.php|*.pl|*.pm|*.pod|*.sh|\
    *.ad[asb]|*.asm|*.inc|*.[ch]|*.[ch]pp|*.[ch]xx|*.cc|*.hh|\
    *.lsp|*.l|*.pas|*.p|*.xml|*.xps|*.xsl|*.axp|*.ppd|*.pov|\
    *.diff|*.patch|*.py|*.rb|*.sql|*.ebuild|*.eclass|*.yaml|*.zsh)
        pygmentize -f terminal "$1";;

    .bashrc|.bash_aliases|.bash_environment|.zshrc|.zshenv)
        pygmentize -f terminal -l sh "$1";;

    *)
        if grep -q "#\!/bin/bash" "$1" 2> /dev/null; then
            pygmentize -f terminal -l sh "$1"
        elif grep -q "#\!/usr/bin/env bash" "$1" 2> /dev/null; then
            pygmentize -f terminal -l sh "$1"
        elif grep -q "#\!/usr/bin/local/bash" "$1" 2> /dev/null; then
            pygmentize -f terminal -l sh "$1"
        elif grep -q "#\!/usr/bin/local/zsh" "$1" 2> /dev/null; then
            pygmentize -f terminal -l sh "$1"
        else
            exit 1
        fi
esac

exit 0
