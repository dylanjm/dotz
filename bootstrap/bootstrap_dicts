#!/usr/bin/env bash
curl -s 'https://raw.githubusercontent.com/wooorm/dictionaries/master/dictionaries/en-US/index.dic' -o ~/Library/Dictionaries/en_US.dic
curl -s 'https://raw.githubusercontent.com/wooorm/dictionaries/master/dictionaries/en-US/index.aff' -o ~/Library/Dictionaries/en_US.aff
curl -s 'https://raw.githubusercontent.com/wooorm/dictionaries/master/dictionaries/en-US/index.dic' -o ~/Library/Spelling/en_US.dic
curl -s 'https://raw.githubusercontent.com/wooorm/dictionaries/master/dictionaries/en-US/index.aff' -o ~/Library/Spelling/en_US.aff
